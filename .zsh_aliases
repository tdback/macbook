# Aliases called by .zshrc

# Terminal
alias cp='cp -iv'
alias rm='rm -Idv'
alias ls='ls -Gp'
alias malt='~/Scripts/Malt/malt.sh'

# Vim 
alias v=nvim
alias vi=nvim
alias vim=nvim

# Dotfiles 
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# Python
alias python=python3
alias ipy=ipython

# Clojure
alias lrepl='lein repl'
